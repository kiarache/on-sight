# ON-Sight 환경변수 설정 예시
# V15: 보안을 위해 실제 환경에서는 `.env` 파일을 생성하여 실제 값으로 교체하세요

# 서버 포트
PORT=3001

# 데이터베이스 URL (PostgreSQL)
# 형식: postgresql://[사용자명]:[비밀번호]@[호스트]:[포트]/[데이터베이스명]
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/onsight_db"

# JWT 시크릿 키 (절대 노출 금지!)
# 생성 방법: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET="your-very-secure-random-jwt-secret-key-here"

# CORS 허용 오리진 (쉼표로 구분)
# 개발: http://localhost:5173
# 프로덕션: 실제 배포 도메인 추가 (예: https://your-app.vercel.app)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3001"
